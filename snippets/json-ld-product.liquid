{% assign current_variant = product.selected_or_first_available_variant %}
<script type="application/ld+json">
  {
  	"@context": "https://schema.org/",
  	"@type": "Product",
  	"name": "{{ product.title | escape }} {{ current_variant.title | escape }}",
  	"image": [{% for media in product.media %}"{{ media | image_url: width: 1024, height: 1024 }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
  	"description": "{{ page_description | strip_html | escape }}",
  	"brand": {
  		"@type": "Brand",
  		"name": "{{ product.vendor | escape }}"
  	},
  	"sku": "{{ current_variant.sku | escape }}",
  	"offers": {
  		"@type": "Offer",
  		"priceCurrency": "{{ shop.currency }}",
  		"price": "{{ current_variant.price | money_without_currency }}",
  		"availability": "https://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}",
  		"url": "{{ shop.url }}{{ current_variant.url }}"
  	}
  }
</script>

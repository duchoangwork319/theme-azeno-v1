                    {%- if padding_content-1[0] != blank -%}
                        padding: {{ padding_content-1[0] }};
                    {%- endif -%}
                    {%- if margin_content[0] != blank -%}
                        margin: {{ margin_content[0] }};
                    {%- endif -%}
                    {%- if block.settings.vertical_position_2 == 'middle' -%}
                        top: 50%;transform: translateY(-50%);
                    {%- elsif block.settings.vertical_position_2 == 'top' -%}
                        top: 0;
                    {%- elsif block.settings.vertical_position_2 == 'bottom' -%}
                        bottom: 0;
                    {%- endif -%}

	{%- endif -%}
{%- endstyle -%}

<section class="wpbingo-section wpbingo-section--two-banner">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-section__content">
				<div class="group-banner">
                    <div class="banner-left">
						<div class="banner-2 featured-banner bwp-effect-{{ section.settings.effect }}">
							<div class="bwp-image" >
								<a class="image" href="{{ section.settings.image_url1 }}">
									{%- if section.settings.image1 -%}
										{% include 'img-global' with image: section.settings.image1, class: "featured-banner__img", effect: "fade-in" %}
									{%- else -%}
										<img class="lazyload fade-in" src="https://placehold.jp/616x465.png" width="616" height="465" />
									{%- endif -%}
								</a>
							</div>
							<div class="banner-wrapper-infor position-1-{{ position-1 }}">
								<div class="info">
									<div class="content">
										{%- if section.settings.title1 != blank -%}<h2 class="title-banner">{{ section.settings.title1 }}</h2>{%- endif -%}
									</div>
								</div>
							</div>
						</div>
                    </div>
                    <div class="banner-right"> 
                        <div class="banner-2 featured-banner bwp-effect-{{ section.settings.effect }}">
                            <div class="bwp-image">
                               <a class="image" href="{{ section.settings.image_url2 }}">
									{%- if section.settings.image2 -%}
										{% include 'img-global' with image: section.settings.image2, class: "featured-banner__img", effect: "fade-in" %}
									{%- else -%}
										<img class="lazyload fade-in" src="https://placehold.jp/1125x465.png" width="1125" height="465" />
									{%- endif -%}
								</a>
                            </div>
                            <div class="banner-wrapper-infor position-2-{{ position-2 }}">
                                <div class="info">
                                    <div class="content">
										{%- if section.settings.desc2 != blank -%}<h3 class="desc-banner">{{ section.settings.desc2 }}</h3>{%- endif -%}
                                        {%- if section.settings.title2 != blank -%}<h2 class="title-banner">{{ section.settings.title2 }}</h2>{%- endif -%}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</section>

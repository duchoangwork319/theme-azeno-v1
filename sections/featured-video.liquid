							margin:{{ block.settings.margin_mobi }};
							text-align:{{ block.settings.align_mobi }};
						}
						#shopify-section-{{ section.id }} .wpbingo-section--video .button-{{forloop.index}} a{
							font-size:{{ block.settings.font_size_mobi }}px;
							line-height:{{ block.settings.line_height_mobi }}px;
							letter-spacing:{{ block.settings.letter_spacing_mobi }}px;
							padding:{{ block.settings.padding_mobi }};
							color:{{ block.settings.color_mobi }};
							background:{{ block.settings.background_mobi }};
							{%- if block.settings.border_mobi -%}
								border:{{ block.settings.border_width_mobi }}px solid {{ block.settings.border_color_mobi }};
								border-radius:{{ block.settings.border_radius_mobi }};
							{%- endif -%}
						}
						#shopify-section-{{ section.id }} .wpbingo-section--video .button-{{forloop.index}} a:before{
							background:{{ block.settings.background_hover_mobi }};
						}
						#shopify-section-{{ section.id }} .wpbingo-section--video .button-{{forloop.index}} a:hover{
							color:{{ block.settings.color_hover_mobi }};
							{%- if block.settings.border -%}
								border-color:{{ block.settings.border_color_hover_mobi }};
							{%- endif -%}
						}
				{%- endcase -%}
			{%- endfor -%}
		}
	{%- endif -%}
{%- endstyle -%}

<section class="wpbingo-section wpbingo-section--video wpbingo-section--{{ section.id }} overflow-hidden">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-section__content">
				<div class="section__content">
					<div class="content">
						<div class="button-video">{{ section.settings.title_button }}</div>
						{%- for block in section.blocks -%}
							{%- case block.type -%}
								{%- when 'title' -%}
									{%- unless block.settings.title == blank -%}
										<div class="wpbingo-title heading-{{forloop.index}}">
											{{ block.settings.title }}
										</div>
									{%- endunless -%}
								{%- when 'button' -%}
									{%- unless block.settings.title == blank -%}
										<div class="wpbingo-button  button-{{forloop.index}}" >
											<a href="{{ block.settings.button_link }}">{{ block.settings.title }}</a>
										</div>
									{%- endunless -%}
							{%- endcase -%}
						{%- endfor -%}
					</div>
				</div>
				<div class="section__video">
					<div class="banner-video">
						<div class="bwp-image" >
							{%- assign image 		= 	section.settings.image -%}
							{%- if image -%}
								{% include 'img-global' with image: image, class: "featured-banner__img", effect: "fade-in" %}
							{%- else -%}
								<img class="lazyload fade-in" src="https://placehold.jp/1440x656.png" width="1440" height="656" />
							{%- endif -%}
						</div>
					</div>
					<div class="video-wrapper">
						<div class="close-video close-full"></div>
						<div class="video-iframe">
							<div class="close-video close-button"></div>
							{%- if section.settings.video_url == blank -%}
								<iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
							{%- else -%}
								{%- if section.settings.video_url.type == "youtube" -%}
									<iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
								{%- endif -%}
								{%- if section.settings.video_url.type == "vimeo" -%}
									<iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?color={{ settings.color_secondary | remove: "#" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
								{%- endif -%}
							{%- endif -%}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


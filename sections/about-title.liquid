{{ 'css-about-title.css' | asset_url | stylesheet_tag }}
{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- style -%}
	{%- if section.settings.color_bg != blank -%}
		{%- if section.settings.width_bg == 'full' -%}
			#shopify-section-{{ section.id }}{
				background:{{ section.settings.color_bg }};
				{%- if section.settings.padding_bg != blank -%}padding:{{ section.settings.padding_bg }};{%- endif -%}
			}
		{%- elsif section.settings.width_bg == 'container' -%}
			#shopify-section-{{ section.id }} .wpbingo-section__inner{
				background:{{ section.settings.color_bg }};
				{%- if section.settings.padding_bg != blank -%}padding:{{ section.settings.padding_bg }};{%- endif -%}
			}
		{%- endif -%}
	{%- endif -%}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--about-title{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .wpbingo-section--about-title{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .wpbingo-section--about-title{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .wpbingo-section--about-title{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- for block in section.blocks -%}
		{%- case block.type -%}
			{%- when 'title' -%}
				#shopify-section-{{ section.id }} .wpbingo-section--about-title .heading-{{forloop.index}}{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					margin:{{ block.settings.margin }};
					color:{{ block.settings.color }};
					text-align:{{ block.settings.align }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				#shopify-section-{{ section.id }} .wpbingo-section--about-title .content-title-{{forloop.index}}{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
				}
			{%- when 'button' -%}
					#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}}{
						margin:{{ block.settings.margin }};
						text-align:{{ block.settings.align }};
					}
					#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a{
						font-size:{{ block.settings.font_size }}px;
						line-height:{{ block.settings.line_height }}px;
						font-weight:{{ block.settings.font_weight }};
						letter-spacing:{{ block.settings.letter_spacing }}px;
						color:{{ block.settings.color }};
						background:{{ block.settings.background }};
						padding:{{ block.settings.padding }};
						overflow:hidden;
						border-radius:{{ block.settings.border_radius }};
					}
					{%- if block.settings.border -%}
						#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a{
							border-width:{{ block.settings.border_width }};
							border-color:{{ block.settings.border_color }};
							border-style:solid;
						}
					{%- endif -%}
					#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a:before{
						background:{{ block.settings.background_hover }};
					}
					#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a:hover{
						color:{{ block.settings.color_hover }};
					}
					{%- if block.settings.border -%}
						#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a:hover{
							border-color:{{ block.settings.border_color_hover }};
						}
					{%- endif -%}
					#shopify-section-{{ section.id }} .wpbingo-section--about-title .content-button-{{forloop.index}}{
						max-width:{{ block.settings.width }}%;
						flex:0 0 {{ block.settings.width }}%;
					}
					{%- unless block.settings.icon_title == blank -%}
						#shopify-section-{{ section.id }} .wpbingo-section--about-title .button-{{forloop.index}} a i{
							font-size:{{ block.settings.font_icon }}px;
							top:{{ block.settings.pos_icon }}px;
							position:relative;
							margin: {{ block.settings.margin_icon }}
						}
